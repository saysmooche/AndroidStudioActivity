<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/person"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/hello_android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="Hello Android!"
        android:textColor="#9A0C0C"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />

    <Button
        android:id="@+id/services_button"
        android:layout_width="196dp"
        android:layout_height="51dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/holo_red_dark"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Services"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toTopOf="@+id/activity_button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hello_android" />

    <Button
        android:id="@+id/activity_button2"
        android:layout_width="201dp"
        android:layout_height="49dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/holo_red_dark"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Activities"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toTopOf="@+id/content_button3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/services_button" />

    <Button
        android:id="@+id/content_button3"
        android:layout_width="199dp"
        android:layout_height="48dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/holo_red_dark"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Content Providers"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toTopOf="@+id/broadcast_button4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_button2" />

    <Button
        android:id="@+id/broadcast_button4"
        android:layout_width="196dp"
        android:layout_height="50dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="65dp"
        android:background="@android:color/holo_red_dark"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Broadcast Receiver"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/content_button3" />

    <Button
        android:id="@+id/close_button"
        android:layout_width="68dp"
        android:layout_height="48dp"
        android:layout_marginStart="295dp"
        android:layout_marginTop="647dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="36dp"
        android:background="#D62B2B"
        android:text="Close App"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>